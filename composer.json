{
  "name": "tokenio/sdk",
  "description": "PHP SDK for interacting with the Token System",
  "version": "1.0.0-beta",
  "keywords": [
    "token",
    "payment processing",
    "api"
  ],
  "homepage": "https://token.io",
  "license": "MIT",
  "authors": [
    {
      "name": "Token.io",
      "homepage": "https://token.io"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "ext-bcmath" : "*",
    "ext-json": "*",
    "ext-grpc": "*",
    "paragonie/sodium_compat": "1.7.0",
    "paragonie/random_compat": ">=2",
    "stephenhill/base58": "~1.0",
    "grpc/grpc": "^1.6.0",
    "google/protobuf": "^3.6.1",
    "jms/serializer": "1.7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  },
  "autoload": {
    "psr-4": {
      "Test\\": "tests/",
      "Io\\Token\\": "lib/",
      "Google\\": "lib/Proto/Google",
      "Io\\Token\\GPBMetadata\\": "lib/Proto/GPBMetadata",
      "Io\\": "lib/Proto/Io/"
    }
  },
  "suggest": {
    "ext-libsodium": "PHP < 7.0: Better performance, password hashing (Argon2i), secure memory management (memzero), and better security.",
    "ext-sodium": "PHP >= 7.0: Better performance, password hashing (Argon2i), secure memory management (memzero), and better security."
  }
}
